{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2016",
		"allowJs": true,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"rootDir": "src",
		"skipLibCheck": true,
		"paths": {
			"*": [
				"node_modules/*",
			],
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/__mocks__/*",
		"**/__snapshots__/*",
	]
}
